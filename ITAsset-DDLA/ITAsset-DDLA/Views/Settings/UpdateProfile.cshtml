@model UpdateProfileViewModel
@{
    ViewData["Title"] = "Parametrlər";
}

<div class="main-content">
    <div class="container mt-5">
        <div class="logo-header">
            <img src="~/assets/images/ddlaLogo.png" alt="DDLA Logo" class="img-fluid">
            <div class="logo-text">
                <h1>Profil Parametrləri</h1>
                <small>Şəxsi məlumatlarınızı idarə edin</small>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card profile-card">
                    <div class="card-body text-center">
                        <div class="profile-picture-container">
                            @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                            {
                                <img src="~/assets/images/Uploads/ProfilePictures/@Model.ProfilePictureUrl" alt="Profil şəkli" class="profile-picture" id="profileImagePreview" style="height:100px;">
                            }
                            else
                            {
                                <div class="profile-initials">
                                    @Model.FirstName?.FirstOrDefault()@Model.LastName?.FirstOrDefault()
                                </div>
                            }
                        </div>
                        <h5 class="mt-3">@Model.FirstName @Model.LastName</h5>
                        <p class="text-muted">@Model.UserName</p>

                        <form asp-action="UpdateProfilePicture" method="post" enctype="multipart/form-data" class="mt-3">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label for="profilePicture" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-camera"></i> Şəkil dəyişdir
                                    <input type="file" id="profilePicture" name="ProfilePicture" accept="image/*" style="display: none;" onchange="previewImage(this)">
                                </label>
                                <button type="submit" class="btn btn-primary btn-sm" id="savePictureBtn" style="display: none;">
                                    <i class="fas fa-save"></i> Yadda saxla
                                </button>
                                <button type="button" class="btn btn-danger btn-sm" id="cancelPictureBtn" style="display: none;">
                                    <i class="fas fa-times"></i> Ləğv et
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="UpdateProfile" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="FirstName">Ad</label>
                                        <input asp-for="FirstName" class="form-control" readonly>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="LastName">Soyad</label>
                                        <input asp-for="LastName" class="form-control" readonly>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="UserName">İstifadəçi adı</label>
                                <input asp-for="UserName" class="form-control">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email">Email ünvanı</label>
                                <input asp-for="Email" class="form-control" readonly>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group mt-3">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Dəyişiklikləri yadda saxla
                                </button>
                                <a asp-action="ChangePassword" class="btn btn-warning ml-2">
                                    <i class="fas fa-key"></i> Şifrəni dəyiş
                                </a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();

            reader.onload = function(e) {
                const preview = document.getElementById('profileImagePreview');
                if (preview) {
                    preview.src = e.target.result;
                } else {
                    // If no image element exists (user had initials), create one
                    const initialsDiv = document.querySelector('.profile-initials');
                    if (initialsDiv) {
                        initialsDiv.style.display = 'none';
                        const img = document.createElement('img');
                        img.id = 'profileImagePreview';
                        img.src = e.target.result;
                        img.alt = 'Profil şəkli';
                        img.className = 'profile-picture';
                        img.style.height = '100px';
                        document.querySelector('.profile-picture-container').appendChild(img);
                    }
                }

                // Show save and cancel buttons
                document.getElementById('savePictureBtn').style.display = 'inline-block';
                document.getElementById('cancelPictureBtn').style.display = 'inline-block';
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    // Cancel button click handler
    document.getElementById('cancelPictureBtn')?.addEventListener('click', function() {
        const fileInput = document.getElementById('profilePicture');
        fileInput.value = '';

        const preview = document.getElementById('profileImagePreview');
        if (preview) {
            const initialsDiv = document.querySelector('.profile-initials');
            if (initialsDiv) {
                preview.remove();
                initialsDiv.style.display = 'flex';
            }
        }

        document.getElementById('savePictureBtn').style.display = 'none';
        this.style.display = 'none';
    });
</script>