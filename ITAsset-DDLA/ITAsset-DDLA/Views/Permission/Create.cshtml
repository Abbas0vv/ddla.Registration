@model RegisterViewModel
<div class="container">
    <div class="logo-header">
        <img src="~/assets/images/ddlaLogo.png" alt="DDLA Logo" class="img-fluid" style="max-height: 80px;">
        <div class="logo-text">
            <h1>Yeni istifadəçi qeydiyyatı</h1>
            <small>Dövlət Dəniz və Liman Agentliyi</small>
        </div>
    </div>

    <div class="registration-card">
        <form method="post" asp-action="Create">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-4">
                        <h5 class="mb-3">Şəxsi məlumatlar</h5>
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">Ad</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="error-message"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Soyad</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="error-message"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">İstifadəçi Adı</label>
                            <input asp-for="UserName" class="form-control form-control-sm"/>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-4">
                        <h5 class="mb-3">Hesab məlumatları</h5>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">E-poçt</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="error-message"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Şifrə</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="error-message"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Şifrə (təkrar)</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="error-message"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="fas fa-times me-1"></i> Bağla
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Əlavə et
                </button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
