@using ITAsset_DDLA.Database.Models.ViewModels.Admin
@using ITAsset_DDLA.Helpers.Enums
@model List<UserWithPermissionsViewModel>

@{
    ViewData["Title"] = "İcazə İdarəetmə Paneli";
}

<div class="container py-4">
    <div class="text-center mb-4">
        <img src="~/assets/images/ddlaLogo.png" alt="DDLA Logo" style="height:60px;">
        <h2 class="mt-2">İcazə İdarəetmə Paneli</h2>
        <p class="text-muted">Dövlət Dəniz və Liman Agentliyi</p>
    </div>

    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
    {
        <div class="mb-3 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Əlavə et
            </a>
        </div>
    }


    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>İstifadəçi</th>
                    <th class="text-center">Əməliyyat İcazələri</th>
                    <th class="text-center">Anbar İcazələri</th>
                    <th class="text-center">Avadanlıq İcazələri</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    string rowClass = user.Status switch
                    {
                        LocalUserStatus.Disable => "text-muted",
                        LocalUserStatus.Delete => "deleted-user",
                        _ => ""
                    };

                    <tr class="@rowClass">
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="~/assets/images/Uploads/ProfilePictures/@(string.IsNullOrEmpty(user.ProfilePictureUrl) ? "default.jpg" : user.ProfilePictureUrl)"
                                     class="rounded-circle me-3 border"
                                     style="width:45px; height:45px; object-fit:cover; opacity:@(user.Status == LocalUserStatus.Delete ? "0.3" : user.Status == LocalUserStatus.Disable ? "0.5" : "1");">
                                <div>
                                    <strong>@user.FullName</strong>
                                    <div class="small">@user.Username</div>

                                    @if (user.Status == LocalUserStatus.Disable)
                                    {
                                        <span class="badge bg-secondary">Disabled</span>
                                    }
                                    else if (user.Status == LocalUserStatus.Delete)
                                    {
                                        <span class="badge bg-danger">Deleted</span>
                                    }
                                </div>
                            </div>
                        </td>

                        <!-- Əməliyyat icazələri -->
                        <td class="text-center">
                            @if (user.Status == LocalUserStatus.Delete)
                            {
                                <span class="text-muted">İcazələr silinib</span>
                            }
                            else
                            {
                                <div class="d-flex flex-wrap justify-content-center gap-1">
                                    @foreach (var perm in new[] { PermissionType.OperationAdd, PermissionType.OperationEdit, PermissionType.OperationDelete, PermissionType.OperationView })
                                    {
                                        <span class="badge @(user.HasPermission(perm) ? "bg-success" : "bg-secondary")">
                                            @perm.ToString().Replace("Operation", "")
                                        </span>
                                    }
                                </div>
                            }
                        </td>

                        <!-- Anbar icazələri -->
                        <td class="text-center">
                            @if (user.Status == LocalUserStatus.Delete)
                            {
                                <span class="text-muted">İcazələr silinib</span>
                            }
                            else
                            {
                                <div class="d-flex flex-wrap justify-content-center gap-1">
                                    @foreach (var perm in new[] { PermissionType.InventoryAdd, PermissionType.InventoryEdit, PermissionType.InventoryDelete, PermissionType.InventoryView })
                                    {
                                        <span class="badge @(user.HasPermission(perm) ? "bg-success" : "bg-secondary")">
                                            @perm.ToString().Replace("Inventory", "")
                                        </span>
                                    }
                                </div>
                            }
                        </td>

                        <!-- Avadanlıq icazələri -->
                        <td class="text-center">
                            @if (user.Status == LocalUserStatus.Delete)
                            {
                                <span class="text-muted">İcazələr silinib</span>
                            }
                            else
                            {
                                <div class="d-flex flex-wrap justify-content-center gap-1">
                                    @foreach (var perm in new[] { PermissionType.EquipmentEdit, PermissionType.EquipmentView })
                                    {
                                        <span class="badge @(user.HasPermission(perm) ? "bg-success" : "bg-secondary")">
                                            @perm.ToString().Replace("Equipment", "")
                                        </span>
                                    }
                                </div>
                            }
                        </td>

                        <!-- Əməliyyatlar -->
                        <td class="text-end">
                            @if (user.Status == LocalUserStatus.Delete)
                            {
                                <form asp-action="ActivateUser" asp-route-userId="@user.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-success me-2"
                                            onclick="return confirm('Bu istifadəçini aktiv etmək istədiyinizə əminsiniz?');">
                                        <i class="fas fa-check"></i> Aktiv et
                                    </button>
                                </form>

                                <form asp-action="HardDeleteUser" asp-route-userId="@user.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Bu istifadəçini bazadan birdəfəlik silmək istədiyinizə əminsiniz?');">
                                        <i class="fas fa-trash"></i> Tam Sil
                                    </button>
                                </form>
                            }
                            else
                            {
                                <a asp-action="Edit" asp-route-userId="@user.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i> Redaktə
                                </a>
                            }
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<style>
    .deleted-user {
        background-color: #f8f9fa; /* açıq boz fon */
        color: #6c757d; /* boz text */
        font-style: italic;
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.4em 0.6em;
        white-space: nowrap; /* Badge-ləri sətirdə qırma */
    }

    thead.sticky-top {
        position: sticky;
        top: 0;
        z-index: 1020;
    }
</style>
