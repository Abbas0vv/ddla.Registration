@using ITAsset_DDLA.Database.Models.ViewModels.Admin
@using ITAsset_DDLA.Helpers.Enums
@model List<UserWithPermissionsViewModel>

@{
    ViewData["Title"] = "İcazə İdarəetmə Paneli";
}

<div class="main-content">
    <div class="container py-4">
        <div class="text-center mb-4">
            <img src="~/assets/images/ddlaLogo.png" alt="DDLA Logo" style="height:60px;">
            <h2 class="mt-2">İcazə İdarəetmə Paneli</h2>
            <p class="text-muted">Dövlət Dəniz və Liman Agentliyi</p>
        </div>

        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle">
                <thead class="table-light sticky-top">
                    <tr>
                        <th>İstifadəçi</th>
                        <th class="text-center">Əməliyyat İcazələri</th>
                        <th class="text-center">Anbar İcazələri</th>
                        <th class="text-center">Avadanlıq İcazələri</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="~/assets/images/Uploads/ProfilePictures/@(string.IsNullOrEmpty(user.ProfilePictureUrl) ? "default.jpg" : user.ProfilePictureUrl)"
                                         class="rounded-circle me-3" style="width:45px; height:45px; object-fit:cover;">
                                    <div>
                                        <strong>@user.FullName</strong>
                                        <div class="text-muted small">@user.Username</div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="d-flex flex-wrap justify-content-center gap-1">
                                    @foreach (var perm in new[] { PermissionType.OperationƏlavəEt, PermissionType.OperationRedatəEt, PermissionType.OperationSil, PermissionType.OperationGörüntülə })
                                    {
                                        <span class="badge @(user.HasPermission(perm) ? "bg-success" : "bg-secondary")">
                                            @(perm.ToString().Replace("Operation", ""))
                                        </span>
                                    }
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="d-flex flex-wrap justify-content-center gap-1">
                                    @foreach (var perm in new[] { PermissionType.InventoryƏlavəEt, PermissionType.InventoryRedaktəEt, PermissionType.InventorySil, PermissionType.InventoryGörüntülə })
                                    {
                                        <span class="badge @(user.HasPermission(perm) ? "bg-success" : "bg-secondary")">
                                            @(perm.ToString().Replace("Inventory", ""))
                                        </span>
                                    }
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="d-flex flex-wrap justify-content-center gap-1">
                                    @foreach (var perm in new[] { PermissionType.EquipmentRedatəEt, PermissionType.EquipmentGörüntülə })
                                    {
                                        <span class="badge @(user.HasPermission(perm) ? "bg-success" : "bg-secondary")">
                                            @(perm.ToString().Replace("Equipment", ""))
                                        </span>
                                    }
                                </div>
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-userId="@user.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i> Redaktə
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .badge {
        font-size: 0.75rem;
        padding: 0.4em 0.6em;
        white-space: nowrap; /* Badge-ləri sətirdə qırma */
    }

    thead.sticky-top {
        position: sticky;
        top: 0;
        z-index: 1020;
    }
</style>
