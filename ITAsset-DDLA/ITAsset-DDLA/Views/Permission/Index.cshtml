@using ITAsset_DDLA.Database.Models.ViewModels.Admin
@using ITAsset_DDLA.Helpers.Enums
@model List<UserWithPermissionsViewModel>

@{
    ViewData["Title"] = "İcazə İdarəetmə Paneli";
}

<div class="main-content">
    <div class="container mt-5">
        <div class="logo-header">
            <img src="~/assets/images/ddlaLogo.png" alt="DDLA Logo" class="img-fluid">
            <div class="logo-text">
                <h1>İcazə İdarəetmə Paneli</h1>
                <small>Dövlət Dəniz və Liman Agentliyi</small>
            </div>
        </div>

        <div class="table-responsive mt-4">
            <table class="table table-bordered permission-table">
                <thead>
                    <tr>
                        <th rowspan="2">İstifadəçilər</th>
                        <th colspan="3" class="text-center">İcazə Növləri</th>
                    </tr>
                    <tr>
                        <th class="text-center bg-light">Əməliyyat İcazələri</th>
                        <th class="text-center bg-light">Anbar İcazələri</th>
                        <th class="text-center bg-light">Avadanlıq İcazələri</th>
                    </tr>
                    <tr class="permission-headers">
                        <th></th>
                        <th>
                            <div class="d-flex flex-column">
                                <div class="permission-category">Əməliyyat İcazələri</div>
                                <div class="d-flex flex-wrap">
                                    <span class="permission-tag">Yeni əməliyyat yarat</span>
                                    <span class="permission-tag">Əməliyyat redaktə et</span>
                                    <span class="permission-tag">Əməliyyat sil</span>
                                    <span class="permission-tag">Əməliyyatları görüntülə</span>
                                </div>
                            </div>
                        </th>
                        <th>
                            <div class="d-flex flex-column">
                                <div class="permission-category">Anbar İcazələri</div>
                                <div class="d-flex flex-wrap">
                                    <span class="permission-tag">Anbar əlavə et</span>
                                    <span class="permission-tag">Anbar redaktə et</span>
                                    <span class="permission-tag">Anbar sil</span>
                                    <span class="permission-tag">Anbarı görüntülə</span>
                                </div>
                            </div>
                        </th>
                        <th>
                            <div class="d-flex flex-column">
                                <div class="permission-category">Avadanlıq İcazələri</div>
                                <div class="d-flex flex-wrap">
                                    <span class="permission-tag">Avadanlıq əlavə et</span>
                                    <span class="permission-tag">Avadanlıq redaktə et</span>
                                    <span class="permission-tag">Avadanlıq sil</span>
                                    <span class="permission-tag">Avadanlığı görüntülə</span>
                                </div>
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="user-info">
                                <div class="d-flex align-items-center">
                                    <div class="user-avatar me-2">
                                        <img src="~/assets/images/Uploads/ProfilePictures/@(string.IsNullOrEmpty(user.ProfilePictureUrl) ? "default.jpg" : user.ProfilePictureUrl)"
                                             alt="Profile Picture"
                                             class="profile-picture"
                                             loading="lazy" />
                                    </div>
                                    <div>
                                        <strong>@user.FullName</strong>
                                        <div class="text-muted small">@user.Username</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex flex-wrap permission-cells">
                                    <div class="permission-cell @(user.HasPermission(PermissionType.OperationCreate) ? "has-permission" : "no-permission")">
                                        <i class="fas @(user.HasPermission(PermissionType.OperationCreate) ? "fa-check" : "fa-times")"></i>
                                    </div>
                                    <div class="permission-cell @(user.HasPermission(PermissionType.OperationEdit) ? "has-permission" : "no-permission")">
                                        <i class="fas @(user.HasPermission(PermissionType.OperationEdit) ? "fa-check" : "fa-times")"></i>
                                    </div>
                                    <div class="permission-cell @(user.HasPermission(PermissionType.OperationDelete) ? "has-permission" : "no-permission")">
                                        <i class="fas @(user.HasPermission(PermissionType.OperationDelete) ? "fa-check" : "fa-times")"></i>
                                    </div>
                                    <div class="permission-cell @(user.HasPermission(PermissionType.OperationView) ? "has-permission" : "no-permission")">
                                        <i class="fas @(user.HasPermission(PermissionType.OperationView) ? "fa-check" : "fa-times")"></i>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex flex-wrap permission-cells">
                                    <div class="permission-cell @(user.HasPermission(PermissionType.InventoryCreate) ? "has-permission" : "no-permission")">
                                        <i class="fas @(user.HasPermission(PermissionType.InventoryCreate) ? "fa-check" : "fa-times")"></i>
                                    </div>
                                    <div class="permission-cell @(user.HasPermission(PermissionType.InventoryEdit) ? "has-permission" : "no-permission")">
                                        <i class="fas @(user.HasPermission(PermissionType.InventoryEdit) ? "fa-check" : "fa-times")"></i>
                                    </div>
                                    <div class="permission-cell @(user.HasPermission(PermissionType.InventoryDelete) ? "has-permission" : "no-permission")">
                                        <i class="fas @(user.HasPermission(PermissionType.InventoryDelete) ? "fa-check" : "fa-times")"></i>
                                    </div>
                                    <div class="permission-cell @(user.HasPermission(PermissionType.InventoryView) ? "has-permission" : "no-permission")">
                                        <i class="fas @(user.HasPermission(PermissionType.InventoryView) ? "fa-check" : "fa-times")"></i>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex flex-wrap permission-cells">
                                    <div class="permission-cell @(user.HasPermission(PermissionType.EquipmentCreate) ? "has-permission" : "no-permission")">
                                        <i class="fas @(user.HasPermission(PermissionType.EquipmentCreate) ? "fa-check" : "fa-times")"></i>
                                    </div>
                                    <div class="permission-cell @(user.HasPermission(PermissionType.EquipmentEdit) ? "has-permission" : "no-permission")">
                                        <i class="fas @(user.HasPermission(PermissionType.EquipmentEdit) ? "fa-check" : "fa-times")"></i>
                                    </div>
                                    <div class="permission-cell @(user.HasPermission(PermissionType.EquipmentDelete) ? "has-permission" : "no-permission")">
                                        <i class="fas @(user.HasPermission(PermissionType.EquipmentDelete) ? "fa-check" : "fa-times")"></i>
                                    </div>
                                    <div class="permission-cell @(user.HasPermission(PermissionType.EquipmentView) ? "has-permission" : "no-permission")">
                                        <i class="fas @(user.HasPermission(PermissionType.EquipmentView) ? "fa-check" : "fa-times")"></i>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr class="action-row">
                            <td colspan="4" class="text-end">
                                <a asp-action="Edit" asp-route-userId="@user.Id" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit me-1"></i> İcazələri redaktə et
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .permission-table {
        font-size: 0.9rem;
    }

    .permission-headers th {
        vertical-align: bottom;
        background-color: #f8f9fa;
    }

    .permission-category {
        font-weight: bold;
        margin-bottom: 0.5rem;
        text-align: center;
    }

    .permission-tag {
        background-color: #e9ecef;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        margin: 0.1rem;
        font-size: 0.8rem;
    }

    .user-info {
        min-width: 200px;
    }

    .permission-cells {
        gap: 0.5rem;
        justify-content: center;
    }

    .permission-cell {
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }

    .has-permission {
        background-color: #d4edda;
        color: #155724;
    }

    .no-permission {
        background-color: #f8d7da;
        color: #721c24;
    }

    .action-row td {
        padding: 0.3rem;
        background-color: #f8f9fa;
    }

    .user-avatar {
        color: #6c757d;
    }
</style>