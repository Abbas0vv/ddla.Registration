@using ITAsset_DDLA.Helpers
@using Microsoft.AspNetCore.Identity
@using ddla.ITApplication.Database.Models.DomainModels.Account
@inject UserManager<ddlaUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
    var isAdmin = User.IsInRole("Admin") || User.IsInRole("SuperAdmin");
}
<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DDLA - IT Qeydiyyat Sistemi</title>
    <link rel="icon" type="image/png" href="~/assets/images/ddlaLogo.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Özəl CSS fayllarınız -->
    <link rel="stylesheet" href="~/assets/edit_add.css">
    <link rel="stylesheet" href="~/assets/table.css">
    <link rel="stylesheet" href="~/assets/sidebar.css">
    <link rel="stylesheet" href="~/assets/warehouseStyle.css">
    <style>
        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #005b96;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            margin-right: 10px;
            overflow: hidden;
        }

        .profile-picture {
            height: 100%;
            object-fit: cover;
        }

        .user-info {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .user-name {
            color: white;
            font-weight: 500;
            max-width: 150px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .sidebar-footer {
            margin-top: auto;
        }
        /* Dropdown menyu background və yazı rəngi */
        .sidebar .dropdown-menu {
            background-color: #2c2f33; /* tünd boz / sidebar ilə uyğun */
            padding: 0.5rem 0;
        }

            /* Dropdown item default rəngi */
            .sidebar .dropdown-menu li a {
                color: #ccc; /* boz rəng, oxunaqlı */
                padding: 0.5rem 1rem;
                display: block;
                text-decoration: none;
            }

                /* Hover zamanı rəng */
                .sidebar .dropdown-menu li a:hover {
                    color: #fff; /* ağ rəng yazı üçün düzgün görünəcək */
                    background-color: #40444b; /* hover zamanı arxa fon tünd olsun */
                }

                /* Aktiv item rəngi */
                .sidebar .dropdown-menu li.active > a,
                .sidebar .dropdown-menu li a.active {
                    color: #fff; /* aktiv yazı ağ */
                    background-color: #7289da; /* aktiv item üçün fərqli fon */
                }

        .flyout-menu {
            position: absolute;
            left: 100%; /* sidebar-ın sağında */
            top: 0;
            width: 0;
            overflow: hidden;
            background-color: #2c2f33;
            transition: width 0.3s ease, opacity 0.3s ease;
            opacity: 0;
            z-index: 1000;
        }

            /* Flyout açıq vəziyyət */
            .flyout-menu.open {
                width: 200px; /* istədiyin ölçü */
                opacity: 1;
            }

            .flyout-menu ul {
                list-style: none;
                margin: 0;
                padding: 0;
            }

                .flyout-menu ul li a {
                    display: block;
                    color: #ccc;
                    padding: 0.5rem 1rem;
                    text-decoration: none;
                }

                    .flyout-menu ul li a:hover {
                        background-color: #40444b;
                        color: #fff;
                    }

                    .flyout-menu ul li a.active {
                        background-color: #7289da;
                        color: #fff;
                    }

    </style>
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <h3>IT Qeydiyyat Sistemi</h3>
        </div>
        <ul class="sidebar-menu">
            <!-- Əsas keçidlər -->
            <li class="@Html.IsActive("Transfer", "Index")">
                <a asp-action="Index" asp-controller="Transfer">
                    <i class="fas fa-tachometer-alt"></i> <span>Təhvil-Təslim Jurnalı</span>
                </a>
            </li>
            <li class="@Html.IsActive("Warehouse", "Index")">
                <a asp-action="Index" asp-controller="Warehouse">
                    <i class="fas fa-warehouse"></i> <span>Anbar</span>
                </a>
            </li>
            <li class="@Html.IsActive("Equipment", "Index")">
                <a asp-action="Index" asp-controller="Equipment">
                    <i class="fas fa-laptop"></i> <span>Avadanlıqlar</span>
                </a>
            </li>
            <li class="@Html.IsActive("Users", "Index")">
                <a asp-action="Index" asp-controller="Users">
                    <i class="fas fa-users"></i> <span>İstifadəçilər</span>
                </a>
            </li>

            <!-- Daha çoxu / More Dropdown -->
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" id="moreDropdown">
                    <i class="fas fa-ellipsis-h"></i> <span>Daha çoxu...</span>
                </a>
                <!-- Flyout panel -->
                <div class="flyout-menu" id="moreFlyout">
                    <ul>
                        <li class="@Html.IsActive("Settings", "UpdateProfile")">
                            <a asp-action="UpdateProfile" asp-controller="Settings">Parametrlər</a>
                        </li>
                        <li class="@Html.IsActive("Statistics", "Index")">
                            <a asp-action="Index" asp-controller="Statistics">İstatistika</a>
                        </li>
                        @if (isAdmin)
                        {
                            <li class="@Html.IsActive("Permission", "Index")">
                                <a asp-action="Index" asp-controller="Permission">İdarəetmə</a>
                            </li>
                            <li class="@Html.IsActive("ActivityLogs", "Index")">
                                <a asp-action="Index" asp-controller="ActivityLogs">Loglar</a>
                            </li>
                        }
                    </ul>
                </div>
            </li>

        </ul>

        <!-- Sidebar altında istifadəçi məlumatları və çıxış -->
        <div class="sidebar-footer">
            @if (User.Identity.IsAuthenticated && user != null)
            {
                <div style="padding:1rem;">
                    <div class="user-info">
                        <div class="user-avatar" title="@User.Identity.Name">
                            @if (!string.IsNullOrEmpty(user.ProfilePictureUrl))
                            {
                                <img src="~/assets/images/Uploads/ProfilePictures/@Url.Content(user.ProfilePictureUrl)" alt="Profile Picture" class="profile-picture" loading="lazy" />
                            }
                            else
                            {
                                @User.Identity.Name.Substring(0, 1).ToUpper()
                            }
                        </div>
                        <span class="user-name" title="@User.Identity.Name">@User.Identity.Name</span>
                    </div>
                    <a asp-action="LogOut" asp-controller="Account" class="btn btn-outline-light btn-sm w-100 mt-2">
                        <i class="fas fa-sign-out-alt"></i> Çıxış
                    </a>
                </div>
            }
        </div>
    </div>

    @RenderBody()

    <script>
                document.getElementById('moreDropdown').addEventListener('click', function(e){
            e.preventDefault();
            document.getElementById('moreFlyout').classList.toggle('open');
        });

    </script>
</body>
</html>
