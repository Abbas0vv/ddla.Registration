@{
    ViewData["Title"] = "DDLA - Ana Səhifə";
    Layout = "_Layout";
}

<div class="main-content">
    <div class="empty-logo-container">
        <img src="~/assets/images/ddlaLogo.png" alt="DDLA Logo" class="center-logo">
    </div>
</div>

<style>
    .empty-logo-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: calc(100vh - 120px); /* Adjust based on your header/footer height */
    }

    .center-logo {
        max-width: 400px;
        max-height: 400px;
        filter: drop-shadow(0 0 10px rgba(0,91,150,0.3));
        animation: fadeIn 1s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.95);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>