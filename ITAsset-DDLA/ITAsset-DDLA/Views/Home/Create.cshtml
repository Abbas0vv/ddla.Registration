@using ITAsset_DDLA.Database.Models.DomainModels
@using ITAsset_DDLA.Database.Models.ViewModels.Shared
@using ITAsset_DDLA.Helpers.Enums
@using ddla.ITApplication.Database.Models.ViewModels.Product
@model DoubleProductTypeViewModel

@{
    ViewData["Title"] = "Yeni məhsul qeydiyyatı";
}
<head>
    <link rel="stylesheet" href="~/assets/edit_add.css">
</head>
<div class="row justify-content-center mt-5">
    <div class="col-lg-8 mt-3">
        <div class="form-container">
            <h1 class="page-title">
                <img src="~/assets/images/ddlaLogo.png" alt="ddlaLogo" />
                Yeni məhsul qeydiyyatı
            </h1>

            <form method="post" asp-action="Create" enctype="multipart/form-data" id="addForm">
                <div class="row g-2">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CreateProductViewModel.Recipient" class="form-label"></label>
                            <input asp-for="CreateProductViewModel.Recipient" class="form-control" required placeholder="Məhsulu təhvil alan" />
                            <span asp-validation-for="CreateProductViewModel.Recipient" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CreateProductViewModel.InventarId" class="form-label"></label>
                            <input asp-for="CreateProductViewModel.InventarId" class="form-control" required placeholder="Məhsulun INVENTAR kodu" />
                            <span asp-validation-for="CreateProductViewModel.InventarId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CreateProductViewModel.StockProductId" class="form-label"></label>
                            <select asp-for="CreateProductViewModel.StockProductId" class="form-select" required>
                                <option value="" disabled selected>Seçin</option>
                                @if (Model.StockProducts != null && Model.StockProducts.Any())
                                {
                                    @foreach (var product in Model.StockProducts)
                                    {
                                        <option value="@product.Id"
                                                data-available-count="@product.AvailableCount">
                                            @product.Name (Mövcud: @product.AvailableCount)
                                        </option>
                                    }
                                }
                                else
                                {
                                    <option value="" disabled>Məhsul tapılmadı</option>
                                }
                            </select>
                            <span asp-validation-for="CreateProductViewModel.StockProductId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CreateProductViewModel.ImageFile" class="form-label"></label>
                            <div class="file-input-container">
                                <label for="ImageFile" class="file-input-label">
                                    <span class="file-input-text">Şəkil seçin...</span>
                                    <span class="file-input-btn"><i class="fas fa-upload me-1"></i>Seçin</span>
                                </label>
                                <input asp-for="CreateProductViewModel.ImageFile" type="file" class="d-none" id="ImageFile" />
                            </div>
                            <div id="imagePreviewContainer" class="mt-2" style="display: none;">
                                <img id="imagePreview" src="#" alt="Şəkil önizləməsi" class="image-preview img-thumbnail" style="max-height: 150px;">
                            </div>
                            <span asp-validation-for="CreateProductViewModel.ImageFile" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CreateProductViewModel.DepartmentName" class="form-label"></label>
                            <select asp-for="CreateProductViewModel.DepartmentName" class="form-select" required>
                                <option value="" disabled selected>Seçin</option>
                                @foreach (var department in Enum.GetValues(typeof(DepartmentName)))
                                {
                                    <option value="@department">@department</option>
                                }
                            </select>
                            <span asp-validation-for="CreateProductViewModel.DepartmentName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CreateProductViewModel.UnitName" class="form-label"></label>
                            <select asp-for="CreateProductViewModel.UnitName" class="form-select" required>
                                <option value="" disabled selected>Seçin</option>
                                @foreach (var unit in Enum.GetValues(typeof(UnitName)))
                                {
                                    <option value="@unit">@unit</option>
                                }
                            </select>
                            <span asp-validation-for="CreateProductViewModel.UnitName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CreateProductViewModel.Count" class="form-label"></label>
                            <input asp-for="CreateProductViewModel.Count" class="form-control" required min="1" placeholder="Sayı" value="1" />
                            <span asp-validation-for="CreateProductViewModel.Count" class="text-danger"></span>
                            <small id="availableCountText" class="text-muted"></small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CreateProductViewModel.DateofReceipt" class="form-label"></label>
                            <input asp-for="CreateProductViewModel.DateofReceipt" class="form-control" type="datetime-local" />
                            <span asp-validation-for="CreateProductViewModel.DateofReceipt" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row g-2">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CreateProductViewModel.DocumentFile" class="form-label"></label>
                            <div class="file-input-container">
                                <label for="DocumentFile" class="file-input-label">
                                    <span class="file-input-text">Fayl seçin...</span>
                                    <span class="file-input-btn"><i class="fas fa-paperclip me-1"></i>Seçin</span>
                                </label>
                                <input asp-for="CreateProductViewModel.DocumentFile" type="file" class="d-none" id="DocumentFile" />
                            </div>
                            <small class="text-muted mt-1 d-block">İstənilən fayl tipi qəbul edilir (maksimum 5MB)</small>
                            <span asp-validation-for="CreateProductViewModel.DocumentFile" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="CreateProductViewModel.Description" class="form-label"></label>
                    <textarea asp-for="CreateProductViewModel.Description" class="form-control" rows="2" placeholder="Əlavə izahat"></textarea>
                    <span asp-validation-for="CreateProductViewModel.Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-2">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2" style="background-color: rgb(213 72 72); color: white;">
                        <i class="fas fa-times me-1"></i>Bağla
                    </a>
                    <button type="submit" class="btn btn-primary" style="background-color: rgb(64, 126, 208)">
                        <i class="fas fa-save me-1"></i>Yadda saxla
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('ImageFile').addEventListener('change', function (e) {
        const file = e.target.files[0];
        const preview = document.getElementById('imagePreview');
        const container = document.getElementById('imagePreviewContainer');
        if (file) {
            const reader = new FileReader();
            reader.onload = function (event) {
                preview.src = event.target.result;
                container.style.display = 'block';
            }
            reader.readAsDataURL(file);
        } else {
            container.style.display = 'none';
            preview.src = '#';
        }
    });

    // Update available count when product selection changes
    document.getElementById('StockProductId').addEventListener('change', function() {
        const selectedOption = this.options[this.selectedIndex];
        const availableCount = selectedOption.getAttribute('data-available-count');
        document.getElementById('availableCountText').textContent = `Mövcud sayı: ${availableCount}`;

        // Set max value for count input
        const countInput = document.getElementById('Count');
        countInput.setAttribute('max', availableCount);
    });
</script>