@model ddla.ITApplication.Database.Models.ViewModels.Product.UpdateProductViewModel

@{
    ViewData["Title"] = "Məhsulu Yenilə";
}
<head>
    <link rel="stylesheet" href="~/assets/edit_add.css" />
</head>
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="form-container">
            <h1 class="page-title">
                <img src="~/assets/images/ddlaLogo.png" alt="ddlaLogo" />
                Məhsulu Yenilə
            </h1>

            <form asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="row g-2">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Recipient" class="form-label"></label>
                            <input asp-for="Recipient" class="form-control" required />
                            <span asp-validation-for="Recipient" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label"></label>
                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                            @if (Model.ImagePath != null)
                            {
                                <img src="@Model.ImagePath" alt="Cari Şəkil" class="img-thumbnail mt-2" style="max-height: 150px;" />
                            }
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="DepartmentName" class="form-label"></label>
                            <select asp-for="DepartmentName" class="form-select" required>
                                <option disabled selected>Seçin</option>
                                <option value="IT">IT</option>
                                <option value="HR">HR</option>
                                <option value="Maliyyə">Maliyyə</option>
                                <option value="Nəzarət">Nəzarət</option>
                                <option value="Liman Əməliyyatları">Liman Əməliyyatları</option>
                                <option value="Gəmiçilik">Gəmiçilik</option>
                            </select>
                            <span asp-validation-for="DepartmentName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UnitName" class="form-label"></label>
                            <select asp-for="UnitName" class="form-select" required>
                                <option disabled selected>Seçin</option>
                                <option value="İnkişaf">İnkişaf</option>
                                <option value="Dəstək">Dəstək</option>
                                <option value="İdarəetmə">İdarəetmə</option>
                                <option value="Gömrük">Gömrük</option>
                                <option value="Logistika">Logistika</option>
                            </select>
                            <span asp-validation-for="UnitName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateofReceipt" class="form-label"></label>
                            <input asp-for="DateofReceipt" type="datetime-local" class="form-control" />
                            <span asp-validation-for="DateofReceipt" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="DocumentFile" class="form-label"></label>
                            <input asp-for="DocumentFile" type="file" class="form-control" />
                            @if (Model.DocumentPath != null)
                            {
                                <p class="mt-1 text-muted">Cari sənəd: <a href="@Model.DocumentPath" target="_blank">Bax</a></p>
                            }
                            <span asp-validation-for="DocumentFile" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Count" class="form-label"></label>
                            <input asp-for="Count" class="form-control" type="number" min="1" required />
                            <span asp-validation-for="Count" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-2">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2" style="background-color: rgb(213 72 72); color: white;">
                        <i class="fas fa-times me-1"></i>Bağla
                    </a>
                    <button type="submit" class="btn btn-primary" style="background-color: rgb(64, 126, 208)">
                        <i class="fas fa-save me-1"></i>Yadda saxla
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>