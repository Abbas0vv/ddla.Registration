@using ITAsset_DDLA.Database.Models.DomainModels
@using ITAsset_DDLA.Database.Models.ViewModels.Shared
@using ITAsset_DDLA.Helpers.Enums
@using ddla.ITApplication.Database.Models.ViewModels.Product
@model DoubleUpdateProductTypeViewModel

@{
    ViewData["Title"] = "Məhsul redaktəsi";
}
<head>
    <link rel="stylesheet" href="~/assets/edit_add.css">
</head>
<div class="row justify-content-center mt-5">
    <div class="col-lg-8 mt-3">
        <div class="form-container">
            <h1 class="page-title">
                <img src="~/assets/images/ddlaLogo.png" alt="ddlaLogo" />
                Məhsul redaktəsi
            </h1>

            <form method="post" asp-action="Update" enctype="multipart/form-data" id="updateForm">
                <div class="row g-2">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="UpdateProductViewModel.Recipient" class="form-label"></label>
                            <input asp-for="UpdateProductViewModel.Recipient" class="form-control" required placeholder="Məhsulu təhvil alan" />
                            <span asp-validation-for="UpdateProductViewModel.Recipient" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UpdateProductViewModel.InventarId" class="form-label"></label>
                            <input asp-for="UpdateProductViewModel.InventarId" class="form-control" required placeholder="Məhsulun INVENTAR kodu" />
                            <span asp-validation-for="UpdateProductViewModel.InventarId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="UpdateProductViewModel.DocumentFile" class="form-label"></label>
                            <div class="file-input-container">
                                <label for="DocumentFile" class="file-input-label">
                                    <span class="file-input-text">Fayl seçin...</span>
                                    <span class="file-input-btn"><i class="fas fa-paperclip me-1"></i>Seçin</span>
                                </label>
                                <input asp-for="UpdateProductViewModel.DocumentFile" type="file" class="d-none" id="DocumentFile" />
                            </div>
                            <small class="text-muted mt-1 d-block">İstənilən fayl tipi qəbul edilir (maksimum 5MB)</small>
                            <span asp-validation-for="UpdateProductViewModel.DocumentFile" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="UpdateProductViewModel.DepartmentName" class="form-label"></label>
                            <select asp-for="UpdateProductViewModel.DepartmentName" class="form-select" required>
                                <option value="" disabled selected>Seçin</option>
                                @foreach (var department in Enum.GetValues(typeof(DepartmentName)))
                                {
                                    <option value="@department">@department</option>
                                }
                            </select>
                            <span asp-validation-for="UpdateProductViewModel.DepartmentName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UpdateProductViewModel.UnitName" class="form-label"></label>
                            <select asp-for="UpdateProductViewModel.UnitName" class="form-select" required>
                                <option value="" disabled selected>Seçin</option>
                                @foreach (var unit in Enum.GetValues(typeof(UnitName)))
                                {
                                    <option value="@unit">@unit</option>
                                }
                            </select>
                            <span asp-validation-for="UpdateProductViewModel.UnitName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UpdateProductViewModel.Count" class="form-label"></label>
                            <input asp-for="UpdateProductViewModel.Count" class="form-control" required min="1" placeholder="Sayı"/>
                            <span asp-validation-for="UpdateProductViewModel.Count" class="text-danger"></span>
                            <small id="availableCountText" class="text-muted"></small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UpdateProductViewModel.DateofReceipt" class="form-label"></label>
                            <input asp-for="UpdateProductViewModel.DateofReceipt" class="form-control" type="datetime-local" />
                            <span asp-validation-for="UpdateProductViewModel.DateofReceipt" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-2">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2" style="background-color: rgb(213 72 72); color: white;">
                        <i class="fas fa-times me-1"></i>Bağla
                    </a>
                    <button type="submit" class="btn btn-primary" style="background-color: rgb(64, 126, 208)">
                        <i class="fas fa-save me-1"></i>Yadda saxla
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Update available count when product selection changes
    document.getElementById('StockProductId').addEventListener('change', function() {
        const selectedOption = this.options[this.selectedIndex];
        const availableCount = selectedOption.getAttribute('data-available-count');
        document.getElementById('availableCountText').textContent = `Mövcud sayı: ${availableCount}`;

        // Set max value for count input
        const countInput = document.getElementById('Count');
        countInput.setAttribute('max', availableCount);
    });
</script>