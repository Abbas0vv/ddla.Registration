@{
    Layout = null;
    var code = ViewBag.StatusCode as int? ?? 500;
}
<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@code | DDLA</title>
    <link rel="icon" type="image/png" href="~/assets/images/ddlaLogo.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/assets/css/notFound.css">
</head>
<body style="display:flex;">
    <div class="error-container">
        <img src="~/assets/images/ddlaLogo.png" alt="DDLA Logo" class="error-logo">
        <div class="error-code">@code</div>
        <h2 class="error-title">Xəta Baş Verdi</h2>
        <p class="error-message">
            Üzr istəyirik, gözlənilməz xəta baş verdi.
            Əgər problem davam edirsə, dəstək komandamızla əlaqə saxlayın.
        </p>
        <div class="error-actions">
            <a href="javascript:history.back()" class="btn btn-home">
                <i class="fas fa-arrow-left"></i>
                <span>Geri Qayıt</span>
            </a>
            <a href="mailto:itd@ddla.az" class="btn btn-secondary">
                <i class="fas fa-envelope"></i>
                <span>Dəstək</span>
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-home"></i>
                <span>Ana Səhifə</span>
            </a>
        </div>
    </div>
</body>
</html>
