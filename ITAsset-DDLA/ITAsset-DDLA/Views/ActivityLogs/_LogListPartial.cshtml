
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>İstifadəçi</th>
                <th>Əməliyyat</th>
                <th>Tarix</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model.Logs)
            {
                <tr>
                    <td>@log.UserFullName</td>
                    <td>@log.Action</td>
                    <td>@log.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav>
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="#" onclick="loadLogs(@(Model.CurrentPage - 1))">Əvvəlki</a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" href="#" onclick="loadLogs(@i)">@i</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="#" onclick="loadLogs(@(Model.CurrentPage + 1))">Sonrakı</a>
            </li>
        }
    </ul>
</nav>

<script>
        function loadLogs(page) {
        const userName = $('#userFilter').val() || null;
        const permission = $('#permissionFilter').val();
        const date = $('#dateFilter').val();

        $.ajax({
            url: '/ActivityLogs/GetLogs',
            type: 'GET',
            data: {
                page: page,
                userName: userName,
                permissionType: permission ? parseInt(permission) : null,
                date: date ? new Date(date).toISOString() : null
            },
            success: function (result) {
                $('#logContainer').html(result);
            }
        });
    }
    $('#userFilter, #permissionFilter, #dateFilter').on('change', function(e) {
        e.preventDefault(); // form-un submit olunmasının qarşısını alır
        loadLogs(1);
    });
</script>

