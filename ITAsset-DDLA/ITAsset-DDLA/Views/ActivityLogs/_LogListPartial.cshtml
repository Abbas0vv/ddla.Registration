
<div class="container mt-5">
    <div class="logo-header">
        <img src="~/assets/images/ddlaLogo.png" alt="DDLA Logo" class="img-fluid">
        <div class="logo-text">
            <h1>Fəaliyyət Logları</h1>
            <small>Dövlət Dəniz və Liman Agentliyi</small>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Loglarda axtarış...">
                <button class="btn btn-primary" type="button">
                    <i class="fas fa-search"></i> Axtar
                </button>
            </div>
        </div>
        <div class="col-md-6 text-end">
            <button class="btn btn-success">
                <i class="fas fa-file-excel"></i> Excel-ə çıxar
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="filter-section">
        <div class="row">
            <div class="col-md-4">
                <label class="form-label">Tarixə görə filtrlə:</label>
                <input type="date" class="form-control">
            </div>
            <div class="col-md-4">
                <label class="form-label">İstifadəçiyə görə filtrlə:</label>
                <select class="form-select">
                    <option value="">Bütün istifadəçilər</option>
                    <option value="1">İstifadəçi 1</option>
                    <option value="2">İstifadəçi 2</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Əməliyyat növü:</label>
                <select class="form-select">
                    <option value="">Bütün əməliyyatlar</option>
                    <option value="create">Yaradılma</option>
                    <option value="update">Yenilənmə</option>
                    <option value="delete">Silinmə</option>
                </select>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>İstifadəçi</th>
                    <th>Əməliyyat</th>
                    <th>Tarix</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.Logs)
                {
                    <tr>
                        <td>@log.UserFullName</td>
                        <td>@log.Action</td>
                        <td>@log.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<nav>
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="#" onclick="loadLogs(@(Model.CurrentPage - 1))">Əvvəlki</a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" href="#" onclick="loadLogs(@i)">@i</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="#" onclick="loadLogs(@(Model.CurrentPage + 1))">Sonrakı</a>
            </li>
        }
    </ul>
</nav>

<script>
    function loadLogs(page) {
        $.ajax({
            url: '/ActivityLogs/GetLogs',
            type: 'GET',
            data: { page: page },
            success: function (result) {
                $('#logContainer').html(result);
            },
            error: function () {
                alert("Loglar yüklənərkən xəta baş verdi.");
            }
        });
    }
</script>

