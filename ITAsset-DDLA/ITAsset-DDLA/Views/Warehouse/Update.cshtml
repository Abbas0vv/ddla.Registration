@using ddla.ITApplication.Database.Models.ViewModels.Warehouse
@model UpdateStockViewModel
@{
    ViewData["Title"] = "Məhsulu redaktə et";
}

    <div class="row justify-content-center">
        <div class="col-lg-6 mt-4">
            <div class="form-container">
                <h1 class="page-title">Məhsulu redaktə et</h1>

                <form asp-action="Update" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label asp-for="InventoryCode" class="form-label"></label>
                        <input asp-for="InventoryCode" class="form-control" />
                        <span asp-validation-for="InventoryCode" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end mt-3">
                        <a asp-action="Index" class="btn btn-outline-danger me-2">Bağla</a>
                        <button type="submit" class="btn btn-primary">Yadda saxla</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
