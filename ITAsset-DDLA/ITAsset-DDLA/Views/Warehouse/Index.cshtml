@using ITAsset_DDLA.Database.Models.ViewModels.Shared
﻿@using ITAsset_DDLA.Database.Models.DomainModels
@model List<GroupedProductViewModel>

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DDLA - IT Qeydiyyat Sistemi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="~/assets/warehouseStyle.css" rel="stylesheet" />
</head>
<body>
    <div class="main-content">
        <div class="container mt-4">
            <div class="logo-header">
                <img src="~/assets/images/ddlaLogo.png" alt="DDLA Logo" class="img-fluid">
                <div class="logo-text">
                    <h1>IT Anbar Sistemi</h1>
                    <small>Dövlət Dəniz və Liman Agentliyi</small>
                </div>
            </div>

            <div class="table-header">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Əlavə et
                </a>
                <div class="global-search-container">
                    <div class="input-group input-group-sm w-auto">
                        <input type="text" id="globalSearch" class="form-control" placeholder="Ümumi axtarış...">
                        <button class="btn btn-outline-secondary" type="button" id="clearGlobalSearch">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div class="table-container">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="column-search-row">
                                <th></th>
                                <th><input type="text" class="form-control column-search" data-column="1" placeholder="Məhsul adı"></th>
                                <th><input type="text" class="form-control column-search" data-column="2" placeholder="Təsvir"></th>
                                @* <th></th> *@
                                <th><input type="text" class="form-control column-search" data-column="4" placeholder="Ümumi sayı"></th>
                                <th><input type="text" class="form-control column-search" data-column="4" placeholder="İstifadədə olan"></th>
                                <th><input type="text" class="form-control column-search" data-column="4" placeholder="Hazırda"></th>
                                <th></th>
                            </tr>
                            <tr>
                                <th>#</th>
                                <th>Məhsul adı</th>
                                <th>Təsvir</th>
                                @* <th>Şəkil</th> *@
                                <th>Ümumi Sayı</th>
                                <th>Istifadədə Olan</th>
                                <th>Hazırda</th>
                                <th>Əməliyyatlar</th>
                            </tr>
                        </thead>
                        <tbody id="itemsTable">
                            @{
                                int count = 1;
                            }
                            @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
@*                                         <td>
                                            <img src="~/assets/images/Uploads/Products/@item.ImagePath" 
                                                 alt="Məhsul şəkli"
                                                 class="file-preview"
                                                 style="object-fit:contain;object-position:center;">
                                        </td> *@
                                        <td>@item.TotalCount</td>
                                        <td>@item.InUseCount</td>
                                        <td>@item.AvailableCount</td>
                                        <td>
                                            <a asp-action="Detail" asp-route-description="@item.Description" class="btn btn-info btn-sm me-1" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const inputs = document.querySelectorAll(".column-search");
            const table = document.getElementById("itemsTable");
            const globalSearchInput = document.getElementById("globalSearch");
            const clearBtn = document.getElementById("clearGlobalSearch");

            // Optimized search function
            function performSearch() {
                const globalSearchTerm = globalSearchInput.value.trim().toLowerCase();
                const columnFilters = {};

                // Collect column filters
                inputs.forEach(input => {
                    const colIndex = input.getAttribute('data-column');
                    const value = input.value.trim().toLowerCase();
                    if (value) {
                        columnFilters[colIndex] = value;
                    }
                });

                // Filter rows
                Array.from(table.rows).forEach(row => {
                    let matchesGlobal = true;
                    let matchesColumns = true;
                    const rowText = row.innerText.toLowerCase();

                    // Apply global search
                    if (globalSearchTerm && !rowText.includes(globalSearchTerm)) {
                        matchesGlobal = false;
                    }

                    // Apply column filters
                    for (const [colIndex, searchTerm] of Object.entries(columnFilters)) {
                        const cell = row.cells[colIndex];
                        if (cell && !cell.innerText.toLowerCase().includes(searchTerm)) {
                            matchesColumns = false;
                            break;
                        }
                    }

                    // Show/hide row based on filters
                    row.style.display = (matchesGlobal && matchesColumns) ? "" : "none";
                });
            }

            // Event listeners
            inputs.forEach(input => {
                input.addEventListener("input", performSearch);
            });

            globalSearchInput.addEventListener("input", performSearch);

            clearBtn.addEventListener("click", function() {
                globalSearchInput.value = "";
                inputs.forEach(input => input.value = "");
                performSearch();
            });
        });
    </script>
</body>
</html>